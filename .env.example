# API Settings
ACIS_HOST=0.0.0.0
ACIS_PORT=8000
ACIS_DEBUG_MODE=true
ACIS_API_KEY_REQUIRED=true
ACIS_API_KEY=your_secure_api_key_here

# Dashboard Settings
ACIS_DASHBOARD_PORT=8501
ACIS_AUTO_START_DASHBOARD=true

# Database Settings
ACIS_DB_URL=mongodb://localhost:27017
ACIS_DB_NAME=acis

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_cx_here

# Search Settings
ACIS_SEARCH_RESULTS_LIMIT=10

# Monitoring and Alerts
ACIS_ENABLE_ALERTS=true
ACIS_ALERT_EMAIL=alerts@example.com

# LLM Settings
ACIS_LLM_MODEL=gpt-4 